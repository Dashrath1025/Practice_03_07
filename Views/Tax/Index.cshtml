@model IEnumerable<Tax>

<h2>Tax List</h2>
<a asp-action="Upsert" class="btn btn-info">Add Tax</a>
<br />
<br />

<table class="table table-striped bodrer">
    <thead>
        <tr>
            <th>Tax Name</th>
            <th>Percentage</th>
            <th>
                Action
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Percentage%</td>
            <td>
                <a asp-action="Upsert" class="btn btn-info" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" class="btn btn-dark" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>


</table>